<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FFC107</item>
    </style>

    <style name="title">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#673AB7</item>
    </style>

    <style name="questions">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#512DA8</item>
        <item name="android:state_pressed">true</item>
    </style>

    <style name="button">
        <item name="android:background">#673AB7</item>
        <item name="android:textColor">#FFC107</item>
    </style>

</resources>